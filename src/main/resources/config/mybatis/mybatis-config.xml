<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings>
	        <setting name="cacheEnabled" value="false" />
	        <setting name="jdbcTypeForNull" value="NULL" />
	</settings>
	<!-- typeAlias 타입별칭 설정 ===================-->
	<typeAliases>
		<typeAlias type="com.user.model.UserVO" alias="User"/>
		<typeAlias type="com.user.model.DitchVO" alias="Ditch"/>
		<typeAlias type="com.product.model.CategoryVO" alias="Category"/>
		<typeAlias type="com.product.model.ProductVO" alias="Product"/>
		<typeAlias type="com.product.model.CartVO" alias="Cart"/>
		<typeAlias type="com.board.model.BoardVO" alias="Board"/>
		<typeAlias type="com.board.model.PagingVO" alias="Paging"/>	
		<typeAlias type="com.product.model.PLikeVO" alias="Like"/>
		<typeAlias type="com.product.model.OrderedVO" alias="Ordered"/>
		<typeAlias type="com.product.model.OrderVO" alias="Order"/>
		<typeAlias type="com.product.model.PLikeVO" alias="PLike"/> 
		<typeAlias type="com.board.model.ReviewVO" alias="Review"/>
		<typeAlias type="com.admin.model.OrderstatsVO" alias="Stats"/>
		<typeAlias type="com.admin.model.CountVO" alias="Count"/>
		<typeAlias type="com.admin.model.UserCountVO" alias="UserCount"/>
		<typeAlias type="com.admin.model.SalesVO" alias="Sales"/>
	</typeAliases>
	
	<!-- mapper.xml 위치 정의============================  -->
	<mappers>
		<mapper resource="config/mybatis/mapper/UserMapper.xml"/>
		<mapper resource="config/mybatis/mapper/CategoryMapper.xml"/>
		<mapper resource="config/mybatis/mapper/ProductMapper.xml"/>
		<mapper resource="config/mybatis/mapper/AdminMapper.xml"/>
		<mapper resource="config/mybatis/mapper/BoardMapper.xml"/>
		<mapper resource="config/mybatis/mapper/MyPageMapper.xml"/>
		<mapper resource="config/mybatis/mapper/CartMapper.xml"/>
		<mapper resource="config/mybatis/mapper/OrderedMapper.xml"/>
		<mapper resource="config/mybatis/mapper/ReviewMapper.xml"/>
		<mapper resource="config/mybatis/mapper/StatsMapper.xml"/>
	</mappers>
</configuration> 